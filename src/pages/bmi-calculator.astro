---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "BMI Calculator - Calculate Your Body Mass Index | SmartFitCalc";
const description =
    "Free BMI calculator to determine your Body Mass Index. Understand if you're underweight, normal weight, overweight, or obese based on your height and weight.";
---

<BaseLayout title={title} description={description}>
    <!-- Hero Section -->
    <section class="mb-12 text-center">
        <h1
            class="mb-4 bg-gradient-to-r from-green-500 to-teal-600 bg-clip-text text-4xl font-extrabold text-transparent md:text-5xl"
        >
            BMI Calculator
        </h1>
        <p class="mx-auto max-w-2xl text-lg text-gray-600">
            Calculate your <strong>Body Mass Index (BMI)</strong> to understand where
            you fall on the weight spectrum. BMI is a simple screening tool used worldwide
            to categorize weight status.
        </p>
    </section>

    <div class="grid gap-8 lg:grid-cols-2">
        <!-- Calculator Form -->
        <div
            class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg md:p-8"
        >
            <h2 class="mb-6 text-2xl font-bold text-gray-800">
                Enter Your Details
            </h2>

            <form id="bmi-form" class="space-y-6">
                <!-- Height -->
                <div>
                    <label
                        for="height"
                        class="mb-2 block text-sm font-medium text-gray-700"
                        >Height (cm)</label
                    >
                    <input
                        type="number"
                        id="height"
                        name="height"
                        min="100"
                        max="250"
                        placeholder="175"
                        required
                        class="w-full rounded-lg border border-gray-300 px-4 py-3 transition focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20"
                    />
                </div>

                <!-- Weight -->
                <div>
                    <label
                        for="weight"
                        class="mb-2 block text-sm font-medium text-gray-700"
                        >Weight (kg)</label
                    >
                    <input
                        type="number"
                        id="weight"
                        name="weight"
                        min="30"
                        max="300"
                        step="0.1"
                        placeholder="70"
                        required
                        class="w-full rounded-lg border border-gray-300 px-4 py-3 transition focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20"
                    />
                </div>

                <!-- Submit Button -->
                <button
                    type="submit"
                    class="w-full rounded-xl bg-gradient-to-r from-green-500 to-teal-500 px-6 py-4 font-semibold text-white shadow-lg transition hover:from-green-600 hover:to-teal-600 hover:shadow-xl active:scale-[0.98]"
                >
                    Calculate BMI
                </button>
            </form>
        </div>

        <!-- Results Section -->
        <div id="results-section" class="hidden space-y-6">
            <!-- BMI Value Card -->
            <div
                class="overflow-hidden rounded-2xl border-2 border-green-200 bg-gradient-to-br from-green-50 to-teal-50 shadow-lg"
            >
                <div class="p-6 text-center">
                    <p
                        class="mb-2 text-sm font-medium uppercase tracking-wider text-green-700"
                    >
                        Your Body Mass Index
                    </p>
                    <p
                        class="text-6xl font-extrabold text-green-600 md:text-7xl"
                    >
                        <span id="bmi-value">0</span>
                    </p>
                </div>

                <!-- Category Badge -->
                <div
                    id="category-container"
                    class="border-t border-green-200 bg-white/50 p-4 text-center"
                >
                    <span
                        id="category-badge"
                        class="inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold"
                    >
                        <span id="category-text">Normal</span>
                    </span>
                </div>
            </div>

            <!-- Weight Status Info -->
            <div class="grid gap-4 sm:grid-cols-2">
                <div
                    class="rounded-xl border border-gray-200 bg-white p-5 shadow-md"
                >
                    <p class="text-sm text-gray-500">Healthy Weight Range</p>
                    <p
                        class="text-xl font-bold text-gray-800"
                        id="healthy-range"
                    >
                        -- kg
                    </p>
                </div>

                <div
                    class="rounded-xl border border-gray-200 bg-white p-5 shadow-md"
                >
                    <p class="text-sm text-gray-500">Weight to Healthy BMI</p>
                    <p
                        class="text-xl font-bold text-gray-800"
                        id="weight-difference"
                    >
                        --
                    </p>
                </div>
            </div>

            <!-- BMI Categories Reference -->
            <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg"
            >
                <h3 class="mb-4 text-lg font-semibold text-gray-800">
                    BMI Categories
                </h3>
                <div id="categories-table" class="space-y-2">
                    <!-- Categories will be populated by JS -->
                </div>
            </div>
        </div>
    </div>

    <!-- Info Section -->
    <section class="mt-16 grid gap-8 md:grid-cols-2">
        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg">
            <h2 class="mb-4 text-xl font-bold text-gray-800">What is BMI?</h2>
            <p class="text-gray-600">
                <strong>Body Mass Index (BMI)</strong> is a simple calculation using
                your height and weight to estimate body fat. The formula is: weight
                (kg) / height² (m²). While BMI doesn't measure body fat directly,
                it's a useful screening tool correlated with more direct measures
                of body fat.
            </p>
        </div>

        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg">
            <h2 class="mb-4 text-xl font-bold text-gray-800">
                Limitations of BMI
            </h2>
            <p class="text-gray-600">
                BMI doesn't distinguish between muscle and fat mass. Athletes
                with high muscle mass may have a high BMI despite being healthy.
                For a more complete picture, consider using our
                <a
                    href="/body-fat-calculator"
                    class="text-primary-600 hover:underline"
                    >Body Fat Calculator</a
                >
                alongside BMI.
            </p>
        </div>
    </section>

    <!-- BMI Chart -->
    <section class="mt-12">
        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg">
            <h2 class="mb-6 text-xl font-bold text-gray-800">
                Understanding BMI Ranges
            </h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm">
                    <thead>
                        <tr class="border-b border-gray-200">
                            <th class="pb-3 font-semibold text-gray-800"
                                >Category</th
                            >
                            <th class="pb-3 font-semibold text-gray-800"
                                >BMI Range</th
                            >
                            <th class="pb-3 font-semibold text-gray-800"
                                >Health Risk</th
                            >
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <tr>
                            <td class="py-3"
                                ><span
                                    class="rounded-full bg-blue-100 px-3 py-1 text-blue-700"
                                    >Underweight</span
                                ></td
                            >
                            <td class="py-3 text-gray-600">&lt; 18.5</td>
                            <td class="py-3 text-gray-600"
                                >Possible nutritional deficiency</td
                            >
                        </tr>
                        <tr>
                            <td class="py-3"
                                ><span
                                    class="rounded-full bg-green-100 px-3 py-1 text-green-700"
                                    >Normal</span
                                ></td
                            >
                            <td class="py-3 text-gray-600">18.5 - 24.9</td>
                            <td class="py-3 text-gray-600">Low risk</td>
                        </tr>
                        <tr>
                            <td class="py-3"
                                ><span
                                    class="rounded-full bg-yellow-100 px-3 py-1 text-yellow-700"
                                    >Overweight</span
                                ></td
                            >
                            <td class="py-3 text-gray-600">25 - 29.9</td>
                            <td class="py-3 text-gray-600">Moderate risk</td>
                        </tr>
                        <tr>
                            <td class="py-3"
                                ><span
                                    class="rounded-full bg-orange-100 px-3 py-1 text-orange-700"
                                    >Obese Class I</span
                                ></td
                            >
                            <td class="py-3 text-gray-600">30 - 34.9</td>
                            <td class="py-3 text-gray-600">High risk</td>
                        </tr>
                        <tr>
                            <td class="py-3"
                                ><span
                                    class="rounded-full bg-red-100 px-3 py-1 text-red-700"
                                    >Obese Class II</span
                                ></td
                            >
                            <td class="py-3 text-gray-600">35 - 39.9</td>
                            <td class="py-3 text-gray-600">Very high risk</td>
                        </tr>
                        <tr>
                            <td class="py-3"
                                ><span
                                    class="rounded-full bg-red-200 px-3 py-1 text-red-800"
                                    >Obese Class III</span
                                ></td
                            >
                            <td class="py-3 text-gray-600">&ge; 40</td>
                            <td class="py-3 text-gray-600"
                                >Extremely high risk</td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Related Calculators -->
    <section class="mt-12">
        <h2 class="mb-6 text-center text-2xl font-bold text-gray-800">
            Related Calculators
        </h2>
        <div class="grid gap-6 md:grid-cols-3">
            <a
                href="/"
                class="group rounded-2xl border border-gray-200 bg-white p-6 shadow-lg transition hover:border-primary-300 hover:shadow-xl"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="flex h-12 w-12 items-center justify-center rounded-full bg-primary-100 transition group-hover:bg-primary-200"
                    >
                        <svg
                            class="h-6 w-6 text-primary-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-800 group-hover:text-primary-600"
                        >
                            TDEE Calculator
                        </h3>
                        <p class="text-sm text-gray-500">
                            Calculate your daily calorie needs
                        </p>
                    </div>
                </div>
            </a>

            <a
                href="/body-fat-calculator"
                class="group rounded-2xl border border-gray-200 bg-white p-6 shadow-lg transition hover:border-primary-300 hover:shadow-xl"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="flex h-12 w-12 items-center justify-center rounded-full bg-secondary-100 transition group-hover:bg-secondary-200"
                    >
                        <svg
                            class="h-6 w-6 text-secondary-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-800 group-hover:text-primary-600"
                        >
                            Body Fat Calculator
                        </h3>
                        <p class="text-sm text-gray-500">
                            Estimate your body fat percentage
                        </p>
                    </div>
                </div>
            </a>

            <a
                href="/ideal-weight-calculator"
                class="group rounded-2xl border border-gray-200 bg-white p-6 shadow-lg transition hover:border-primary-300 hover:shadow-xl"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="flex h-12 w-12 items-center justify-center rounded-full bg-accent-100 transition group-hover:bg-accent-200"
                    >
                        <svg
                            class="h-6 w-6 text-accent-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-800 group-hover:text-primary-600"
                        >
                            Ideal Weight Calculator
                        </h3>
                        <p class="text-sm text-gray-500">
                            Find your healthy weight range
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </section>
</BaseLayout>

<script>
    // BMI Calculator Logic
    const form = document.getElementById("bmi-form") as HTMLFormElement;
    const resultsSection = document.getElementById("results-section");

    // BMI categories
    const bmiCategories = [
        {
            name: "Underweight",
            min: 0,
            max: 18.5,
            color: "bg-blue-100 text-blue-700",
        },
        {
            name: "Normal",
            min: 18.5,
            max: 25,
            color: "bg-green-100 text-green-700",
        },
        {
            name: "Overweight",
            min: 25,
            max: 30,
            color: "bg-yellow-100 text-yellow-700",
        },
        {
            name: "Obese Class I",
            min: 30,
            max: 35,
            color: "bg-orange-100 text-orange-700",
        },
        {
            name: "Obese Class II",
            min: 35,
            max: 40,
            color: "bg-red-100 text-red-700",
        },
        {
            name: "Obese Class III",
            min: 40,
            max: 100,
            color: "bg-red-200 text-red-800",
        },
    ];

    form?.addEventListener("submit", (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const height = parseFloat(formData.get("height") as string) / 100; // cm to m
        const weight = parseFloat(formData.get("weight") as string);

        // Calculate BMI
        const bmi = weight / (height * height);
        const bmiRounded = Math.round(bmi * 10) / 10;

        // Find category
        const category =
            bmiCategories.find((c) => bmi >= c.min && bmi < c.max) ||
            bmiCategories[bmiCategories.length - 1];

        // Calculate healthy weight range (BMI 18.5 - 25)
        const healthyMin = Math.round(18.5 * height * height * 10) / 10;
        const healthyMax = Math.round(25 * height * height * 10) / 10;

        // Calculate weight difference to healthy range
        let weightDiff = "";
        if (bmi < 18.5) {
            const diff = Math.round((healthyMin - weight) * 10) / 10;
            weightDiff = `Gain ${diff} kg`;
        } else if (bmi >= 25) {
            const diff = Math.round((weight - healthyMax) * 10) / 10;
            weightDiff = `Lose ${diff} kg`;
        } else {
            weightDiff = "You're in healthy range!";
        }

        // Update DOM
        document.getElementById("bmi-value")!.textContent =
            bmiRounded.toString();

        const badge = document.getElementById("category-badge")!;
        badge.className = `inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold ${category.color}`;
        document.getElementById("category-text")!.textContent = category.name;

        document.getElementById("healthy-range")!.textContent =
            `${healthyMin} - ${healthyMax} kg`;
        document.getElementById("weight-difference")!.textContent = weightDiff;

        // Render categories table
        const categoriesTable = document.getElementById("categories-table")!;
        categoriesTable.innerHTML = bmiCategories
            .slice(0, 4) // Show first 4 categories
            .map((c) => {
                const isActive = c.name === category.name;
                const rangeText =
                    c.max === 100
                        ? `${c.min}+`
                        : c.min === 0
                          ? `< ${c.max}`
                          : `${c.min} - ${c.max}`;
                return `
          <div class="flex items-center justify-between rounded-lg p-3 ${isActive ? c.color : "bg-gray-50"}">
            <span class="font-medium ${isActive ? "" : "text-gray-700"}">${c.name}</span>
            <span class="text-sm ${isActive ? "" : "text-gray-500"}">${rangeText}</span>
          </div>
        `;
            })
            .join("");

        // Show results
        resultsSection?.classList.remove("hidden");

        // Scroll to results
        resultsSection?.scrollIntoView({ behavior: "smooth", block: "start" });
    });
</script>
