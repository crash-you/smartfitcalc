---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Fitness & Nutrition Blog | SmartFitCalc";
const description =
    "Expert articles on fitness, nutrition, and health. Learn science-backed strategies for weight loss, muscle building, and healthy living.";

const articles = [
    {
        title: "Understanding TDEE: A Complete Beginner's Guide",
        excerpt:
            "Learn what Total Daily Energy Expenditure means and how understanding it can transform your fitness journey.",
        href: "/blog/understanding-tdee",
        date: "December 2024",
        readTime: "6 min",
    },
    {
        title: "How to Calculate Your Macros for Weight Loss",
        excerpt:
            "A step-by-step guide to calculating and tracking macronutrients for effective, sustainable weight loss.",
        href: "/blog/calculate-macros-weight-loss",
        date: "December 2024",
        readTime: "7 min",
    },
    {
        title: "The Science Behind Body Fat Percentage",
        excerpt:
            "Understanding what body fat percentage really means and why it matters more than the number on the scale.",
        href: "/blog/science-body-fat-percentage",
        date: "December 2024",
        readTime: "5 min",
    },
    {
        title: "5 Common Mistakes When Counting Calories",
        excerpt:
            "Avoid these pitfalls that derail most people's calorie counting efforts and learn how to track accurately.",
        href: "/blog/calorie-counting-mistakes",
        date: "December 2024",
        readTime: "5 min",
    },
    {
        title: "Beginner's Guide to Fitness Nutrition",
        excerpt:
            "Everything you need to know about nutrition to support your fitness goals, from protein timing to meal planning.",
        href: "/blog/fitness-nutrition-beginners",
        date: "December 2024",
        readTime: "8 min",
    },
];
---

<BaseLayout title={title} description={description}>
    <section class="mb-12 text-center">
        <h1
            class="mb-4 bg-gradient-to-r from-primary-600 to-accent-600 bg-clip-text text-4xl font-extrabold text-transparent md:text-5xl"
        >
            Fitness & Nutrition Blog
        </h1>
        <p class="mx-auto max-w-2xl text-lg text-gray-600">
            Science-backed articles to help you achieve your health and fitness
            goals
        </p>
    </section>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
            articles.map((article) => (
                <a
                    href={article.href}
                    class="group rounded-2xl border border-gray-200 bg-white p-6 shadow-lg transition hover:border-primary-300 hover:shadow-xl"
                >
                    <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                        <span>{article.date}</span>
                        <span>â€¢</span>
                        <span>{article.readTime} read</span>
                    </div>
                    <h2 class="mb-2 text-xl font-bold text-gray-800 group-hover:text-primary-600">
                        {article.title}
                    </h2>
                    <p class="text-gray-600 text-sm">{article.excerpt}</p>
                    <div class="mt-4 flex items-center text-primary-600 font-medium text-sm">
                        Read Article
                        <svg
                            class="ml-2 h-4 w-4 transition group-hover:translate-x-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"
                            />
                        </svg>
                    </div>
                </a>
            ))
        }
    </div>

    <section
        class="mt-16 rounded-2xl bg-gradient-to-br from-primary-50 to-accent-50 p-8 text-center"
    >
        <h2 class="mb-4 text-2xl font-bold text-gray-800">
            Ready to Apply What You've Learned?
        </h2>
        <p class="mb-6 text-gray-600">
            Use our free calculators to put this knowledge into practice.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
            <a
                href="/"
                class="rounded-xl bg-gradient-to-r from-primary-500 to-primary-600 px-6 py-3 font-semibold text-white shadow-lg"
                >TDEE Calculator</a
            >
            <a
                href="/macro-calculator"
                class="rounded-xl bg-white px-6 py-3 font-semibold text-gray-800 shadow-lg"
                >Macro Calculator</a
            >
        </div>
    </section>
</BaseLayout>
