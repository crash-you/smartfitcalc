        url: "https://smartfitcalc.com",
    },
    publisher: {
        "@type": "Organization",
        name: "SmartFitCalc",
        url: "https://smartfitcalc.com",
        logo: {
            "@type": "ImageObject",
            url: "https://smartfitcalc.com/favicon.svg",
        },
    },
    mainEntityOfPage: {
        "@type": "WebPage",
        "@id": "https://smartfitcalc.com/blog/understanding-tdee",
