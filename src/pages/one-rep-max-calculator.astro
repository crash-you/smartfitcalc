---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "One Rep Max Calculator - Calculate Your 1RM | SmartFitCalc";
const description =
    "Free 1RM calculator to estimate your one-rep max for any lift. Use multiple formulas including Epley, Brzycki, and Lombardi to find your maximum strength.";
---

<BaseLayout title={title} description={description}>
    <!-- Hero Section -->
    <section class="mb-12 text-center">
        <h1
            class="mb-4 bg-gradient-to-r from-orange-500 to-red-600 bg-clip-text text-4xl font-extrabold text-transparent md:text-5xl"
        >
            One Rep Max Calculator
        </h1>
        <p class="mx-auto max-w-2xl text-lg text-gray-600">
            Calculate your <strong>One Rep Max (1RM)</strong> to determine the maximum
            weight you can lift for a single repetition. Essential for programming
            your strength training effectively.
        </p>
    </section>

    <div class="grid gap-8 lg:grid-cols-2">
        <!-- Calculator Form -->
        <div
            class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg md:p-8"
        >
            <h2 class="mb-6 text-2xl font-bold text-gray-800">
                Enter Your Lift Details
            </h2>

            <form id="orm-form" class="space-y-6">
                <!-- Weight Lifted -->
                <div>
                    <label
                        for="weight"
                        class="mb-2 block text-sm font-medium text-gray-700"
                        >Weight Lifted (kg)</label
                    >
                    <input
                        type="number"
                        id="weight"
                        name="weight"
                        min="1"
                        max="500"
                        step="0.5"
                        placeholder="100"
                        required
                        class="w-full rounded-lg border border-gray-300 px-4 py-3 transition focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20"
                    />
                </div>

                <!-- Reps Performed -->
                <div>
                    <label
                        for="reps"
                        class="mb-2 block text-sm font-medium text-gray-700"
                        >Reps Performed</label
                    >
                    <input
                        type="number"
                        id="reps"
                        name="reps"
                        min="1"
                        max="30"
                        placeholder="5"
                        required
                        class="w-full rounded-lg border border-gray-300 px-4 py-3 transition focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20"
                    />
                    <p class="mt-1 text-xs text-gray-500">
                        For best accuracy, use 1-10 reps
                    </p>
                </div>

                <!-- Formula Selection -->
                <div>
                    <label
                        for="formula"
                        class="mb-2 block text-sm font-medium text-gray-700"
                        >Formula</label
                    >
                    <select
                        id="formula"
                        name="formula"
                        class="w-full rounded-lg border border-gray-300 px-4 py-3 transition focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500/20"
                    >
                        <option value="epley">Epley (Most Common)</option>
                        <option value="brzycki">Brzycki</option>
                        <option value="lombardi">Lombardi</option>
                        <option value="average">Average of All</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <button
                    type="submit"
                    class="w-full rounded-xl bg-gradient-to-r from-orange-500 to-red-500 px-6 py-4 font-semibold text-white shadow-lg transition hover:from-orange-600 hover:to-red-600 hover:shadow-xl active:scale-[0.98]"
                >
                    Calculate 1RM
                </button>
            </form>
        </div>

        <!-- Results Section -->
        <div id="results-section" class="hidden space-y-6">
            <!-- 1RM Value Card -->
            <div
                class="overflow-hidden rounded-2xl border-2 border-orange-200 bg-gradient-to-br from-orange-50 to-red-50 shadow-lg"
            >
                <div class="p-6 text-center">
                    <p
                        class="mb-2 text-sm font-medium uppercase tracking-wider text-orange-700"
                    >
                        Your Estimated One Rep Max
                    </p>
                    <p
                        class="text-6xl font-extrabold text-orange-600 md:text-7xl"
                    >
                        <span id="orm-value">0</span>
                        <span class="text-2xl">kg</span>
                    </p>
                </div>
            </div>

            <!-- Training Percentages -->
            <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg"
            >
                <h3 class="mb-4 text-lg font-semibold text-gray-800">
                    Training Load Chart
                </h3>
                <div class="space-y-3">
                    <div
                        class="flex items-center justify-between rounded-lg bg-red-50 p-3"
                    >
                        <div>
                            <span class="font-medium text-red-700">95%</span>
                            <span class="ml-2 text-sm text-gray-600"
                                >Max Strength (1-2 reps)</span
                            >
                        </div>
                        <span class="font-bold text-red-600" id="p95">0 kg</span
                        >
                    </div>
                    <div
                        class="flex items-center justify-between rounded-lg bg-orange-50 p-3"
                    >
                        <div>
                            <span class="font-medium text-orange-700">90%</span>
                            <span class="ml-2 text-sm text-gray-600"
                                >Strength (3-4 reps)</span
                            >
                        </div>
                        <span class="font-bold text-orange-600" id="p90"
                            >0 kg</span
                        >
                    </div>
                    <div
                        class="flex items-center justify-between rounded-lg bg-yellow-50 p-3"
                    >
                        <div>
                            <span class="font-medium text-yellow-700">85%</span>
                            <span class="ml-2 text-sm text-gray-600"
                                >Strength (5-6 reps)</span
                            >
                        </div>
                        <span class="font-bold text-yellow-600" id="p85"
                            >0 kg</span
                        >
                    </div>
                    <div
                        class="flex items-center justify-between rounded-lg bg-green-50 p-3"
                    >
                        <div>
                            <span class="font-medium text-green-700">80%</span>
                            <span class="ml-2 text-sm text-gray-600"
                                >Hypertrophy (6-8 reps)</span
                            >
                        </div>
                        <span class="font-bold text-green-600" id="p80"
                            >0 kg</span
                        >
                    </div>
                    <div
                        class="flex items-center justify-between rounded-lg bg-blue-50 p-3"
                    >
                        <div>
                            <span class="font-medium text-blue-700">75%</span>
                            <span class="ml-2 text-sm text-gray-600"
                                >Hypertrophy (8-10 reps)</span
                            >
                        </div>
                        <span class="font-bold text-blue-600" id="p75"
                            >0 kg</span
                        >
                    </div>
                    <div
                        class="flex items-center justify-between rounded-lg bg-purple-50 p-3"
                    >
                        <div>
                            <span class="font-medium text-purple-700">70%</span>
                            <span class="ml-2 text-sm text-gray-600"
                                >Endurance (10-12 reps)</span
                            >
                        </div>
                        <span class="font-bold text-purple-600" id="p70"
                            >0 kg</span
                        >
                    </div>
                    <div
                        class="flex items-center justify-between rounded-lg bg-gray-50 p-3"
                    >
                        <div>
                            <span class="font-medium text-gray-700">65%</span>
                            <span class="ml-2 text-sm text-gray-600"
                                >Endurance (12-15 reps)</span
                            >
                        </div>
                        <span class="font-bold text-gray-600" id="p65"
                            >0 kg</span
                        >
                    </div>
                </div>
            </div>

            <!-- All Formulas Comparison -->
            <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg"
            >
                <h3 class="mb-4 text-lg font-semibold text-gray-800">
                    Formula Comparison
                </h3>
                <div class="space-y-2" id="formula-comparison">
                    <!-- Populated by JS -->
                </div>
            </div>
        </div>
    </div>

    <!-- Info Section -->
    <section class="mt-16 grid gap-8 md:grid-cols-2">
        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg">
            <h2 class="mb-4 text-xl font-bold text-gray-800">What is 1RM?</h2>
            <p class="text-gray-600">
                <strong>One Rep Max (1RM)</strong> is the maximum amount of weight
                you can lift for a single repetition with proper form. It's a key
                metric for strength training, used to determine training loads and
                track progress over time.
            </p>
        </div>

        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg">
            <h2 class="mb-4 text-xl font-bold text-gray-800">
                About the Formulas
            </h2>
            <ul class="space-y-2 text-gray-600">
                <li><strong>Epley:</strong> 1RM = weight × (1 + reps/30)</li>
                <li><strong>Brzycki:</strong> 1RM = weight × 36/(37 - reps)</li>
                <li><strong>Lombardi:</strong> 1RM = weight × reps^0.1</li>
            </ul>
        </div>
    </section>

    <!-- How to Use Section -->
    <section class="mt-12">
        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-lg">
            <h2 class="mb-4 text-xl font-bold text-gray-800">
                How to Use Your 1RM
            </h2>
            <div class="grid gap-6 md:grid-cols-3">
                <div>
                    <h3 class="mb-2 font-semibold text-gray-800">
                        Strength Training
                    </h3>
                    <p class="text-sm text-gray-600">
                        Work at 85-95% of your 1RM for 1-5 reps to build maximum
                        strength.
                    </p>
                </div>
                <div>
                    <h3 class="mb-2 font-semibold text-gray-800">
                        Muscle Building
                    </h3>
                    <p class="text-sm text-gray-600">
                        Train at 70-85% of your 1RM for 6-12 reps for
                        hypertrophy.
                    </p>
                </div>
                <div>
                    <h3 class="mb-2 font-semibold text-gray-800">Endurance</h3>
                    <p class="text-sm text-gray-600">
                        Use 50-70% of your 1RM for 15+ reps to build muscular
                        endurance.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Related Calculators -->
    <section class="mt-12">
        <h2 class="mb-6 text-center text-2xl font-bold text-gray-800">
            Related Calculators
        </h2>
        <div class="grid gap-6 md:grid-cols-3">
            <a
                href="/"
                class="group rounded-2xl border border-gray-200 bg-white p-6 shadow-lg transition hover:border-primary-300 hover:shadow-xl"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="flex h-12 w-12 items-center justify-center rounded-full bg-primary-100 transition group-hover:bg-primary-200"
                    >
                        <svg
                            class="h-6 w-6 text-primary-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-800 group-hover:text-primary-600"
                        >
                            TDEE Calculator
                        </h3>
                        <p class="text-sm text-gray-500">
                            Calculate daily calorie needs
                        </p>
                    </div>
                </div>
            </a>

            <a
                href="/macro-calculator"
                class="group rounded-2xl border border-gray-200 bg-white p-6 shadow-lg transition hover:border-primary-300 hover:shadow-xl"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="flex h-12 w-12 items-center justify-center rounded-full bg-accent-100 transition group-hover:bg-accent-200"
                    >
                        <svg
                            class="h-6 w-6 text-accent-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-800 group-hover:text-primary-600"
                        >
                            Macro Calculator
                        </h3>
                        <p class="text-sm text-gray-500">
                            Optimize your nutrition
                        </p>
                    </div>
                </div>
            </a>

            <a
                href="/body-fat-calculator"
                class="group rounded-2xl border border-gray-200 bg-white p-6 shadow-lg transition hover:border-primary-300 hover:shadow-xl"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="flex h-12 w-12 items-center justify-center rounded-full bg-secondary-100 transition group-hover:bg-secondary-200"
                    >
                        <svg
                            class="h-6 w-6 text-secondary-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-800 group-hover:text-primary-600"
                        >
                            Body Fat Calculator
                        </h3>
                        <p class="text-sm text-gray-500">
                            Estimate body composition
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </section>
</BaseLayout>

<script>
    // 1RM Calculator Logic
    const form = document.getElementById("orm-form") as HTMLFormElement;
    const resultsSection = document.getElementById("results-section");

    // 1RM Formulas
    const formulas = {
        epley: (weight: number, reps: number) => weight * (1 + reps / 30),
        brzycki: (weight: number, reps: number) => weight * (36 / (37 - reps)),
        lombardi: (weight: number, reps: number) =>
            weight * Math.pow(reps, 0.1),
    };

    form?.addEventListener("submit", (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const weight = parseFloat(formData.get("weight") as string);
        const reps = parseInt(formData.get("reps") as string);
        const selectedFormula = formData.get("formula") as string;

        // Calculate 1RM using all formulas
        const results = {
            epley: Math.round(formulas.epley(weight, reps)),
            brzycki: Math.round(formulas.brzycki(weight, reps)),
            lombardi: Math.round(formulas.lombardi(weight, reps)),
        };

        // Calculate average
        const average = Math.round(
            (results.epley + results.brzycki + results.lombardi) / 3,
        );

        // Get primary result based on selected formula
        let oneRM: number;
        if (selectedFormula === "average") {
            oneRM = average;
        } else {
            oneRM = results[selectedFormula as keyof typeof results];
        }

        // If reps is 1, the weight is the 1RM
        if (reps === 1) {
            oneRM = weight;
        }

        // Update DOM
        document.getElementById("orm-value")!.textContent = oneRM.toString();

        // Update percentage chart
        const percentages = [95, 90, 85, 80, 75, 70, 65];
        percentages.forEach((p) => {
            const el = document.getElementById(`p${p}`);
            if (el) {
                el.textContent = `${Math.round(oneRM * (p / 100))} kg`;
            }
        });

        // Update formula comparison
        const comparisonDiv = document.getElementById("formula-comparison")!;
        comparisonDiv.innerHTML = `
            <div class="flex items-center justify-between rounded-lg p-3 ${selectedFormula === "epley" || selectedFormula === "average" ? "bg-orange-50" : "bg-gray-50"}">
                <span class="font-medium text-gray-700">Epley</span>
                <span class="font-bold text-gray-800">${results.epley} kg</span>
            </div>
            <div class="flex items-center justify-between rounded-lg p-3 ${selectedFormula === "brzycki" || selectedFormula === "average" ? "bg-orange-50" : "bg-gray-50"}">
                <span class="font-medium text-gray-700">Brzycki</span>
                <span class="font-bold text-gray-800">${results.brzycki} kg</span>
            </div>
            <div class="flex items-center justify-between rounded-lg p-3 ${selectedFormula === "lombardi" || selectedFormula === "average" ? "bg-orange-50" : "bg-gray-50"}">
                <span class="font-medium text-gray-700">Lombardi</span>
                <span class="font-bold text-gray-800">${results.lombardi} kg</span>
            </div>
            <div class="flex items-center justify-between rounded-lg border-t border-gray-200 p-3 mt-2">
                <span class="font-semibold text-gray-800">Average</span>
                <span class="font-bold text-orange-600">${average} kg</span>
            </div>
        `;

        // Show results
        resultsSection?.classList.remove("hidden");

        // Scroll to results
        resultsSection?.scrollIntoView({ behavior: "smooth", block: "start" });
    });
</script>
